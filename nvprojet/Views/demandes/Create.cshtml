@model nvprojet.Models.demande

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_Layoutclient.cshtml";
}
<br /><br />
<h2 style="font-weight:bold">effectuer votre demande</h2>
<br />
<form method="post" action="/demande/ajouter">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ville_d, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ville_d, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ville_d, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ville_a, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ville_a, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ville_a, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.heure_d, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.heure_d, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.heure_d, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.heur_a, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.heur_a, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.heur_a, "", new { @class = "text-danger" })
            </div>
        </div>

       <input type="text" value="@Session["client"]" name="id_cli" hidden/>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="valider" class="btn btn-success" />
            </div>
        </div>
    </div>

</form>
<div>
    <a class="btn btn-lg" href="/abonnement">retour</a>
</div>
